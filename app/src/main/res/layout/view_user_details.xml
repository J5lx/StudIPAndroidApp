<android.support.v4.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="fill_vertical"
    android:layout_marginBottom="?attr/actionBarSize"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="fill_vertical"
        android:layout_marginBottom="?attr/actionBarSize"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        >

        <TextView
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin_normal"
            android:autoLink="email"
            android:textSize="@dimen/text_size_medium"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:visibility="gone"

            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_mail_white"
            android:drawableTint="@color/studip_primary"
            android:drawablePadding="@dimen/layout_padding_normal"

            tools:text="@string/lipsum_single"
            tools:visibility="visible"
            />
        <!--<View-->
        <!--android:id="@+id/email_phone_devider"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:layout_marginBottom="8dp"-->
        <!--android:layout_marginLeft="@dimen/keyline_1"-->
        <!--android:layout_marginStart="@dimen/keyline_1"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--android:visibility="gone"-->
        <!--tools:visibility="visible">-->
        <!--</View>-->


        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin_normal"
            android:textSize="@dimen/text_size_medium"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:visibility="gone"

            android:gravity="center_vertical"
            android:drawableLeft="@drawable/ic_phone_white"
            android:drawableTint="@color/studip_primary"
            android:drawablePadding="@dimen/layout_padding_normal"

            tools:text="@string/lipsum_single"
            tools:visibility="visible"
            />

        <TextView
            android:id="@+id/skype"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin_normal"
            android:textSize="@dimen/text_size_medium"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:visibility="gone"

            android:gravity="center_vertical"
            android:drawablePadding="@dimen/layout_padding_normal"
            android:drawableLeft="@drawable/ic_skype_white"
            android:drawableTint="@color/studip_primary"

            tools:text="@string/lipsum_single"
            tools:visibility="visible"
            />

        <!--<View-->
        <!--android:id="@+id/phone_homepage_divider"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_marginTop="8dp"-->
        <!--android:layout_marginBottom="8dp"-->
        <!--android:layout_marginLeft="@dimen/keyline_1"-->
        <!--android:layout_marginStart="@dimen/keyline_1"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--android:visibility="gone"-->
        <!--tools:visibility="visible">-->
        <!--</View>-->

        <TextView
            android:id="@+id/homepage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin_normal"
            android:autoLink="web"
            android:textSize="@dimen/text_size_medium"
            android:maxLines="1"
            android:singleLine="true"
            android:ellipsize="end"
            android:visibility="gone"

            android:gravity="center_vertical"
            android:drawablePadding="@dimen/layout_padding_normal"
            android:drawableLeft="@drawable/ic_home_white"
            android:drawableTint="@color/studip_primary"

            tools:text="@string/lipsum_single"
            tools:visibility="visible"
            />

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin_normal"
            android:autoLink="map"
            android:textSize="@dimen/text_size_medium"
            android:visibility="gone"

            android:gravity="center_vertical"
            android:drawablePadding="@dimen/layout_padding_normal"
            android:drawableLeft="@drawable/ic_address_white"
            android:drawableTint="@color/studip_primary"

            tools:text="@string/lipsum_short"
            tools:visibility="visible"
            />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>