<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/background_light"
                android:padding="8dp">


    <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/user_image"
            android:layout_width="100dp"
            android:layout_height="100dp"/>


    <de.elanev.studip.android.app.widget.TypefacedTextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:font="http://schemas.android.com/apk/res/de.elanev.studip.android.app"
            android:id="@+id/fullname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="14dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="14dp"
            android:textColor="@android:color/primary_text_light"
            android:textStyle="bold"
            android:textIsSelectable="true"
            android:textSize="16sp"
            font:typeface="Roboto-Regular.ttf"
            android:layout_toRightOf="@id/user_image"
            android:text="Fullname"/>

    <de.elanev.studip.android.app.widget.TypefacedTextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:font="http://schemas.android.com/apk/res/de.elanev.studip.android.app"
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="14dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="14dp"
            android:textColor="@android:color/primary_text_light"
            android:textIsSelectable="true"
            android:textSize="14sp"
            font:typeface="Roboto-Regular.ttf"
            android:layout_below="@id/fullname"
            android:layout_toRightOf="@id/user_image"
            android:autoLink="email"
            android:text="e@mail.com"/>

    <de.elanev.studip.android.app.widget.TypefacedTextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:font="http://schemas.android.com/apk/res/de.elanev.studip.android.app"
            android:id="@+id/homepage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="14dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="14dp"
            android:textColor="@android:color/primary_text_light"
            android:textIsSelectable="true"
            android:textSize="14sp"
            font:typeface="Roboto-Regular.ttf"
            android:layout_below="@id/user_image"
            android:autoLink="web"
            android:text="www.fuckhut.com"/>

    <de.elanev.studip.android.app.widget.TypefacedTextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:font="http://schemas.android.com/apk/res/de.elanev.studip.android.app"
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="14dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="14dp"
            android:textColor="@android:color/primary_text_light"
            android:textIsSelectable="true"
            android:textSize="14sp"
            font:typeface="Roboto-Regular.ttf"
            android:layout_below="@id/homepage"
            android:autoLink="phone"
            android:text="+49176/213123"/>

    <de.elanev.studip.android.app.widget.TypefacedTextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:font="http://schemas.android.com/apk/res/de.elanev.studip.android.app"
            android:id="@+id/privadr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="14dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="14dp"
            android:textColor="@android:color/primary_text_light"
            android:textIsSelectable="true"
            android:textSize="14sp"
            font:typeface="Roboto-Regular.ttf"
            android:layout_below="@id/phone"
            android:autoLink="map"
            android:text="Wurmweg 13, 4322 Dummhaus"/>

</RelativeLayout>