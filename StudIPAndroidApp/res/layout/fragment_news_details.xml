<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_padding_normal" >

        <de.elanev.studip.android.app.widget.TypefacedTextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:font="http://schemas.android.com/apk/res/de.elanev.studip.android.app"
            android:id="@+id/news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:textColor="@color/primary_text_light"
            android:textIsSelectable="true"
            android:textSize="18sp"
            font:typeface="Roboto-Bold.ttf" />

        <de.elanev.studip.android.app.widget.TypefacedTextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:font="http://schemas.android.com/apk/res/de.elanev.studip.android.app"
            android:id="@+id/news_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/news_title"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="4dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/secondary_text_light"
            android:textIsSelectable="true"
            android:textSize="14sp"
            font:typeface="Roboto-Regular.ttf" />

        <de.elanev.studip.android.app.widget.TypefacedTextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:font="http://schemas.android.com/apk/res/de.elanev.studip.android.app"
            android:id="@+id/news_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/news_author"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:lineSpacingMultiplier="1.25"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textColor="@color/primary_text_light"
            android:textColorLink="@color/studip_mobile_dark"
            android:textIsSelectable="true"
            android:textSize="18sp"
            font:typeface="Roboto-Regular.ttf" />
    </RelativeLayout>

</ScrollView>