<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/layout_padding_normal" >

        <de.elanev.studip.android.app.widget.TypefacedTextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:font="http://schemas.android.com/apk/res/de.elanev.studip.android.app"
            android:id="@+id/course_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_margin_small"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textAllCaps="true"
            android:textIsSelectable="true"
            android:textSize="@dimen/text_size_medium"
            font:typeface="Roboto-Bold.ttf" />

        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_margin_normal"
            layout="@layout/header_line" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <com.android.volley.toolbox.NetworkImageView
                android:id="@+id/user_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/layout_margin_normal"
                android:scaleType="centerCrop"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/user_image_placeholder"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/layout_margin_normal"
                android:scaleType="centerCrop"
                android:src="@drawable/nobody_normal"
                tools:ignore="ContentDescription" />

            <de.elanev.studip.android.app.widget.TypefacedTextView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:font="http://schemas.android.com/apk/res/de.elanev.studip.android.app"
                android:id="@+id/course_teacher_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin_normal"
                android:layout_toRightOf="@id/user_image"
                android:textColor="@color/secondary_text_light"
                android:textIsSelectable="true"
                android:textSize="@dimen/text_size_small"
                font:typeface="Roboto-Regular.ttf" />

            <de.elanev.studip.android.app.widget.TypefacedTextView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:font="http://schemas.android.com/apk/res/de.elanev.studip.android.app"
                android:id="@+id/course_next_appointment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/course_teacher_name"
                android:layout_marginLeft="@dimen/layout_margin_normal"
                android:layout_marginTop="@dimen/layout_margin_small"
                android:layout_toRightOf="@id/user_image"
                android:text="@string/no_appointments"
                android:textIsSelectable="true"
                android:textSize="@dimen/text_size_small"
                font:typeface="Roboto-Bold.ttf" />
        </RelativeLayout>

        <de.elanev.studip.android.app.widget.TypefacedTextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:font="http://schemas.android.com/apk/res/de.elanev.studip.android.app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_margin_small"
            android:layout_marginTop="@dimen/layout_margin_normal"
            android:text="@string/latest_news"
            android:textAllCaps="true"
            android:textColor="@android:color/primary_text_light"
            font:typeface="Roboto-Regular.ttf" />

        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_margin_normal"
            layout="@layout/header_line" />

        <de.elanev.studip.android.app.widget.TypefacedTextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:font="http://schemas.android.com/apk/res/de.elanev.studip.android.app"
            android:id="@+id/news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_margin_small"
            android:text="@string/no_news"
            android:textColor="@color/primary_text_light"
            android:textSize="@dimen/text_size_medium"
            font:typeface="Roboto-Regular.ttf" />

        <de.elanev.studip.android.app.widget.TypefacedTextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:font="http://schemas.android.com/apk/res/de.elanev.studip.android.app"
            android:id="@+id/news_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_margin_small"
            android:textAllCaps="true"
            android:textColor="@color/secondary_text_light"
            android:visibility="gone"
            font:typeface="Roboto-Regular.ttf" />

        <de.elanev.studip.android.app.widget.TypefacedTextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:font="http://schemas.android.com/apk/res/de.elanev.studip.android.app"
            android:id="@+id/show_news_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="@string/show_more"
            android:textAllCaps="true"
            android:textColor="@color/studip_mobile_dark"
            android:visibility="gone"
            font:typeface="Roboto-Regular.ttf" />

        <de.elanev.studip.android.app.widget.TypefacedTextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:font="http://schemas.android.com/apk/res/de.elanev.studip.android.app"
            android:id="@+id/news_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.25"
            android:textColor="@android:color/primary_text_light"
            android:textColorLink="@color/studip_mobile_dark"
            android:textIsSelectable="true"
            android:textSize="@dimen/text_size_medium"
            android:visibility="gone"
            font:typeface="Roboto-Regular.ttf" />

        <de.elanev.studip.android.app.widget.TypefacedTextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:font="http://schemas.android.com/apk/res/de.elanev.studip.android.app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_margin_small"
            android:layout_marginTop="@dimen/layout_margin_normal"
            android:text="@string/Details"
            android:textAllCaps="true"
            android:textColor="@android:color/primary_text_light"
            font:typeface="Roboto-Regular.ttf" />

        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_margin_normal"
            layout="@layout/header_line" />

        <de.elanev.studip.android.app.widget.TypefacedTextView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:font="http://schemas.android.com/apk/res/de.elanev.studip.android.app"
            android:id="@+id/course_description"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/layout_margin_normal"
            android:layout_weight="1"
            android:lineSpacingMultiplier="1.25"
            android:text="@string/no_details"
            android:textColorLink="@color/studip_mobile_dark"
            android:textIsSelectable="true"
            android:textSize="@dimen/text_size_medium"
            font:typeface="Roboto-Regular.ttf" />
    </LinearLayout>

</ScrollView>