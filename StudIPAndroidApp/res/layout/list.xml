                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginBottom="4dp"-->
                <!--android:layout_marginTop="@dimen/list_item_hor_margin"-->
                <!--android:drawableEnd="@drawable/ic_action_sad"-->
                <!--android:drawablePadding="4dp"-->
                <!--android:gravity="center"-->
                <!--android:text="@string/sorry"-->
                <!--android:textColor="@android:color/primary_text_light"-->
                <!--android:textSize="16sp"-->
                <!--font:typeface="Roboto-Regular.ttf" />-->

            <de.elanev.studip.android.app.widget.TypefacedTextView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:font="http://schemas.android.com/apk/res/de.elanev.studip.android.app"
                android:id="@+id/empty_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/no_data"
                android:textColor="@android:color/secondary_text_light"
                android:textSize="14sp"
                font:typeface="Roboto-Regular.ttf" />
        </LinearLayout>

    </LinearLayout>


    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:indeterminate="true"
        android:visibility="visible"
        android:layout_gravity="center" />

</LinearLayout>