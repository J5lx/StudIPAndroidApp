<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_image"
            app:border_width="1dp"
            app:border_color="#fff5f5f5"
            android:layout_width="@dimen/user_image_icon_size"
            android:layout_height="@dimen/user_image_icon_size"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="@dimen/keyline_1"
            android:layout_marginLeft="@dimen/keyline_1"
            android:layout_marginStart="@dimen/keyline_1"
            android:layout_marginBottom="@dimen/keyline_1"
            android:contentDescription="@string/user_image"
            android:scaleType="centerCrop"
            android:src="@drawable/nobody_normal"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/user_image"
            android:layout_toEndOf="@+id/user_image"
            android:layout_alignParentTop="true"
            android:layout_marginTop="8dp"
            >

            <TextView
                android:id="@+id/news_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/keyline_1"
                android:layout_marginLeft="@dimen/keyline_2_minus_56dp"
                android:layout_marginStart="@dimen/keyline_2_minus_56dp"
                android:layout_marginRight="@dimen/keyline_1"
                android:layout_marginEnd="@dimen/keyline_1"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/primary_text_light"
                android:textIsSelectable="true"
                android:textSize="@dimen/text_size_small"
                tools:text="Dr. Prof. Ing. Sample Newsauthor"/>

            <TextView
                android:id="@+id/news_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/keyline_2_minus_56dp"
                android:layout_marginStart="@dimen/keyline_2_minus_56dp"
                android:layout_marginRight="@dimen/keyline_1"
                android:layout_marginEnd="@dimen/keyline_1"
                android:layout_marginBottom="@dimen/keyline_1"

                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/secondary_text_light"
                android:textIsSelectable="true"
                android:textSize="@dimen/text_size_small"
                tools:text="3 days ago"/>

        </LinearLayout>

        <TextView
            android:id="@+id/news_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_image"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="@dimen/keyline_1"
            android:layout_marginStart="@dimen/keyline_1"
            android:layout_marginRight="@dimen/keyline_1"
            android:layout_marginEnd="@dimen/keyline_1"
            android:layout_marginBottom="@dimen/content_area_space"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/primary_text_light"
            android:textIsSelectable="true"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            tools:text="@string/lipsum_single"/>

        <TextView
            android:id="@+id/news_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/news_title"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="@dimen/keyline_1"
            android:layout_marginStart="@dimen/keyline_1"
            android:layout_marginRight="@dimen/keyline_1"
            android:layout_marginEnd="@dimen/keyline_1"
            android:layout_marginBottom="@dimen/keyline_1"
            android:lineSpacingMultiplier="1.25"
            android:linksClickable="true"
            android:textColor="@color/primary_text_light"
            android:textColorLink="@color/studip_mobile_dark"
            android:textIsSelectable="true"
            android:textSize="@dimen/text_size_medium"
            tools:text="@string/lipsum_short"/>
    </RelativeLayout>

</ScrollView>