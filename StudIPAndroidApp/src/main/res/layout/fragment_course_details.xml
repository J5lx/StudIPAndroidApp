<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/layout_padding_normal">

        <TextView
            android:id="@+id/course_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_margin_small"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textIsSelectable="true"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            tools:text="Sample Course title"
            />

        <include
            layout="@layout/header_line"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_margin_normal"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/user_image"
                android:layout_width="@dimen/user_image_medium"
                android:layout_height="@dimen/user_image_medium"
                android:layout_alignParentLeft="true"
                android:layout_marginRight="@dimen/layout_margin_normal"
                android:layout_marginTop="@dimen/layout_margin_normal"
                android:contentDescription="@string/user_image"
                android:scaleType="centerCrop"
                android:src="@drawable/nobody_normal"/>

            <TextView
                android:id="@+id/course_teacher_name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin_normal"
                android:layout_marginTop="@dimen/layout_margin_normal"
                android:layout_toRightOf="@id/user_image"
                android:textColor="@color/secondary_text_light"
                android:textIsSelectable="true"
                android:textSize="@dimen/text_size_small"
                />

            <TextView
                android:id="@+id/course_teacher_count"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/layout_margin_normal"
                android:layout_marginTop="@dimen/layout_margin_small"
                android:layout_toRightOf="@id/user_image"
                android:layout_below="@id/course_teacher_name"
                android:textColor="@color/secondary_text_light"
                android:textIsSelectable="true"
                android:textSize="@dimen/text_size_small"
                />

            <TextView
                android:id="@+id/course_next_appointment"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_margin_normal"
                android:layout_marginTop="@dimen/layout_margin_small"
                android:layout_toRightOf="@id/user_image"
                android:layout_below="@id/course_teacher_count"
                android:text="@string/no_appointments"
                android:textIsSelectable="true"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                android:fontFamily="sans-serif-light"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_margin_small"
            android:layout_marginTop="@dimen/layout_margin_normal"
            android:text="@string/latest_news"
            android:textAllCaps="true"
            android:textColor="@android:color/primary_text_light"
            />

        <include
            layout="@layout/header_line"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_margin_normal"/>

        <TextView
            android:id="@+id/news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_margin_small"
            android:text="@string/no_news"
            android:textColor="@color/primary_text_light"
            android:textSize="@dimen/text_size_medium"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/news_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_margin_small"
            android:textColor="@color/secondary_text_light"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/show_news_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:paddingBottom="@dimen/layout_padding_normal"
            android:paddingTop="@dimen/layout_padding_normal"
            android:text="@string/show_more"
            android:textAllCaps="true"
            android:textColor="@color/studip_mobile_dark"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/news_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.25"
            android:textColor="@android:color/primary_text_light"
            android:textColorLink="@color/studip_mobile_dark"
            android:textIsSelectable="true"
            android:textSize="@dimen/text_size_medium"
            android:visibility="gone"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_margin_small"
            android:layout_marginTop="@dimen/layout_margin_normal"
            android:text="@string/Details"
            android:textAllCaps="true"
            android:textColor="@android:color/primary_text_light"
            />

        <include
            layout="@layout/header_line"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_margin_normal"/>

        <TextView
            android:id="@+id/course_description"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/layout_margin_normal"
            android:layout_weight="1"
            android:lineSpacingMultiplier="1.25"
            android:text="@string/no_details"
            android:textColorLink="@color/studip_mobile_dark"
            android:textIsSelectable="true"
            android:textSize="@dimen/text_size_medium"
            />
    </LinearLayout>

</ScrollView>