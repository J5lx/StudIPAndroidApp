<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_padding_normal">

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="@dimen/user_image_icon_size"
            android:layout_height="@dimen/user_image_icon_size"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/layout_margin_normal"
            android:layout_marginBottom="@dimen/layout_margin_normal"
            android:contentDescription="@string/user_image"
            android:scaleType="centerCrop"
            android:src="@drawable/nobody_normal"/>

        <TextView
            android:id="@+id/message_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/user_image"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/primary_text_light"
            android:textIsSelectable="true"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"
            tools:text="Sample test for the subject field to test the layout behavior."/>

        <TextView
            android:id="@+id/message_sender_and_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_subject"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/user_image"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/secondary_text_light"
            android:textIsSelectable="true"
            android:textSize="@dimen/text_size_small"
            tools:text="Dr. Prof. Med. Ing. TempSample Senderson on 14th April"/>

        <TextView
            android:id="@+id/message_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/user_image"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:lineSpacingMultiplier="1.25"
            android:textColor="@color/primary_text_light"
            android:textColorLink="@color/studip_mobile_dark"
            android:textIsSelectable="true"
            android:textSize="@dimen/text_size_medium"
            tools:text="Sample message text to show the behavior of the layout whith conent."/>
    </RelativeLayout>

</ScrollView>