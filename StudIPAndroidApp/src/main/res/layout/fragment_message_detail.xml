<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/layout_padding_normal">

        <ImageView
            android:id="@+id/user_image"
            android:layout_width="@dimen/user_image_medium"
            android:layout_height="@dimen/user_image_medium"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="@dimen/layout_margin_normal"
            android:contentDescription="@string/user_image"
            android:scaleType="centerCrop"
            android:src="@drawable/nobody_normal"/>

        <de.elanev.studip.android.app.widget.TypefacedTextView
            android:id="@+id/message_subject"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:font="http://schemas.android.com/apk/res/de.elanev.studip.android.app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/user_image"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/primary_text_light"
            android:textIsSelectable="true"
            android:textSize="@dimen/text_size_medium"
            font:typeface="Roboto-Bold.ttf"/>

        <de.elanev.studip.android.app.widget.TypefacedTextView
            android:id="@+id/message_sender_and_date"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:font="http://schemas.android.com/apk/res/de.elanev.studip.android.app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_subject"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/user_image"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/secondary_text_light"
            android:textIsSelectable="true"
            android:textSize="@dimen/text_size_small"
            font:typeface="Roboto-Regular.ttf"/>

        <de.elanev.studip.android.app.widget.TypefacedTextView
            android:id="@+id/message_body"
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:font="http://schemas.android.com/apk/res/de.elanev.studip.android.app"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/user_image"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:lineSpacingMultiplier="1.25"
            android:textColor="@color/primary_text_light"
            android:textColorLink="@color/studip_mobile_dark"
            android:textIsSelectable="true"
            android:textSize="18sp"
            font:typeface="Roboto-Regular.ttf"/>
    </RelativeLayout>

</ScrollView>