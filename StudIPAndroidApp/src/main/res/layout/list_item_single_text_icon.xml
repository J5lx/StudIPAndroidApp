<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon1"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@color/studip_mobile_dark"
        android:padding="16dp"
        android:contentDescription="@string/icon"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/list_item_vert_margin"
        android:layout_marginLeft="@dimen/list_item_hor_margin"
        android:layout_marginRight="@dimen/list_item_hor_margin"
        android:layout_marginTop="@dimen/list_item_vert_margin"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/primary_text_light"
        android:textSize="@dimen/text_size_small"
        tools:text="Sample text for the TextView to see how the layout behaves with content."/>

</LinearLayout>