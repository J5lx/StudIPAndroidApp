<RelativeLayout
    android:id="@+id/list_item"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">


    <TextView
        android:id="@+id/subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/keyline_1"
        android:layout_marginLeft="@dimen/keyline_1"
        android:layout_marginStart="@dimen/keyline_1"
        android:layout_marginRight="@dimen/keyline_1"
        android:layout_marginEnd="@dimen/keyline_1"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="bold"
        tools:text="@string/lipsum_short"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_image"
        app:border_width="1dp"
        app:border_color="#fff5f5f5"
        android:layout_width="@dimen/user_image_icon_size"
        android:layout_height="@dimen/user_image_icon_size"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/subject"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="@dimen/keyline_1"
        android:layout_marginStart="@dimen/keyline_1"
        android:layout_marginBottom="@dimen/keyline_1"
        android:contentDescription="@string/user_image"
        android:scaleType="centerCrop"
        android:src="@drawable/nobody_normal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/subject"
        android:layout_toEndOf="@id/user_image"
        android:layout_toRightOf="@id/user_image"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/entry_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/keyline_1"
            android:layout_marginLeft="@dimen/keyline_2_minus_56dp"
            android:layout_marginStart="@dimen/keyline_2_minus_56dp"
            android:layout_marginRight="@dimen/keyline_1"
            android:layout_marginEnd="@dimen/keyline_1"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/primary_text_light"
            android:textSize="@dimen/text_size_small"
            android:textStyle="bold"
            tools:text="Dr. Med. Peter Pan"/>

        <TextView
            android:id="@+id/entry_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/keyline_2_minus_56dp"
            android:layout_marginStart="@dimen/keyline_2_minus_56dp"
            android:layout_marginRight="@dimen/keyline_1"
            android:layout_marginEnd="@dimen/keyline_1"
            android:layout_marginBottom="@dimen/keyline_1"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/secondary_text_light"
            android:textSize="@dimen/text_size_small"
            android:textStyle="normal"
            tools:text="3 days ago"/>
    </LinearLayout>


    <TextView
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_image"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.25"
        android:maxLines="3"
        android:layout_marginLeft="@dimen/keyline_2_minus_56dp"
        android:layout_marginStart="@dimen/keyline_2_minus_56dp"
        android:layout_marginRight="@dimen/keyline_1"
        android:layout_marginEnd="@dimen/keyline_1"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="@dimen/keyline_1"
        android:textSize="@dimen/text_size_medium"
        android:textStyle="normal"
        tools:text="@string/lipsum_short"/>

    <TextView
        android:id="@+id/newcounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/rounded_corners"
        android:layout_marginLeft="@dimen/keyline_2_minus_56dp"
        android:layout_marginStart="@dimen/keyline_2_minus_56dp"
        android:layout_marginRight="@dimen/keyline_1"
        android:layout_marginEnd="@dimen/keyline_1"
        android:layout_marginBottom="@dimen/keyline_1"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold"

        android:visibility="gone"
        tools:text="99+"/>



</RelativeLayout>