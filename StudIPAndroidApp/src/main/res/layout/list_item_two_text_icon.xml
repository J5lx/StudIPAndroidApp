<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="72dp"
              android:orientation="horizontal"
              android:background="?android:selectableItemBackground">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/rounded_icon_size"
        android:layout_height="@dimen/rounded_icon_size"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp"
        android:layout_marginLeft="@dimen/keyline_1"
        android:layout_marginStart="@dimen/keyline_1"
        android:contentDescription="@string/icon"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/keyline_2_minus_16dp"
        android:layout_marginStart="@dimen/keyline_2_minus_16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/keyline_1"
            android:layout_marginEnd="@dimen/keyline_1"
            android:layout_marginBottom="4dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:textColor="@color/primary_text_light"
            android:textSize="@dimen/text_size_small"
            tools:text="@string/lipsum_short"/>

        <TextView
            android:id="@+id/text2"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/keyline_1"
            android:layout_marginEnd="@dimen/keyline_1"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:textColor="@color/secondary_text_light"
            android:textSize="@dimen/text_size_xsmall"
            tools:text="Sample text so see how the layout behaves with content."
            />


    </LinearLayout>

</LinearLayout>